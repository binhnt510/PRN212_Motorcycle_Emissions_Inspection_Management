<Window x:Class="App_MotoEmissions.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_MotoEmissions"
        mc:Ignorable="d"
        Title="Register" Height="514" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="AliceBlue" Margin="0,0,0,-6">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Register" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Họ và Tên:" FontSize="14" FontWeight="Bold" Margin="5,0,0,5"/>
                <TextBox Name="FullNameTextBox" Width="300" Height="30" VerticalContentAlignment="Center" />
                
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Email:" FontSize="14" FontWeight="Bold" Margin="5,0,0,5"/>

                <TextBox Name="EmailTextBox" Width="300" Height="30"  VerticalContentAlignment="Center" />
                
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Mật khẩu:" FontSize="14" FontWeight="Bold" Margin="5,0,0,5"/>

                <PasswordBox Name="PasswordBox" Width="300" Height="30" VerticalContentAlignment="Center" />
                
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Số điện thoại:" FontSize="14" FontWeight="Bold" Margin="5,0,0,5"/>

                <TextBox Name="PhoneTextBox" Width="300" Height="30"  VerticalContentAlignment="Center" />
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Địa chỉ:" FontSize="14" FontWeight="Bold" Margin="5,0,0,5"/>

                <TextBox Name="AddressTextBox" Width="300" Height="30" AcceptsReturn="True" TextWrapping="Wrap" VerticalContentAlignment="Center"/>
            </StackPanel>

            <Button Content="Đăng ký" Width="300" Height="30" Click="RegisterButton_Click" Background="LightGreen" Margin="0,10,0,0"/>
            <Button Content="Thoát" Width="100" Height="30" Click="ExitButton_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
