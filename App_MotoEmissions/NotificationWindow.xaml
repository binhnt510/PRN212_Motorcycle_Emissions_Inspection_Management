<UserControl x:Class="App_MotoEmissions.NotificationWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:App_MotoEmissions"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AliceBlue" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Nút Làm mới -->
            <RowDefinition Height="*" />
            <!-- Danh sách thông báo -->
            <RowDefinition Height="10"/>
            <!-- Khoảng cách -->
            <RowDefinition Height="*" />
            <!-- Danh sách vi phạm -->
        </Grid.RowDefinitions>

        <!-- Nút làm mới -->
        <StackPanel Grid.Row="0" Margin="10,10,10,0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Làm mới" Width="100" Click="RefreshData"/>
        </StackPanel>

        <!-- Danh sách thông báo -->
        <GroupBox Grid.Row="1" >
            <GroupBox.Header>
                <TextBlock Text="📢 Danh sách Thông báo" FontSize="20" FontWeight="Bold"/>
            </GroupBox.Header>
            <DataGrid x:Name="dataGridNotifications" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Ngày" Binding="{Binding SentDate}" Width="0.6*"/>
                    <DataGridTextColumn Header="Nội dung" Binding="{Binding Message}" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Danh sách vi phạm -->
        <GroupBox Grid.Row="3" Margin="0,0,0,10">
            <GroupBox.Header>
                <TextBlock Text="🚨 Danh sách Vi phạm" FontSize="20" FontWeight="Bold"/>
            </GroupBox.Header>
            <DataGrid x:Name="dataGridViolations" AutoGenerateColumns="False"  IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Biển số xe" Binding="{Binding Vehicle.LicensePlate}" Width="100"/>
                    <DataGridTextColumn Header="Ngày vi phạm" Binding="{Binding ViolationDate}" Width="120"/>
                    <DataGridTextColumn Header="Số tiền phạt" Binding="{Binding FineAmount}" Width="100"/>
                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="100">
                        <DataGridTextColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Style.Triggers>
                                    <!-- Triggers để thay đổi màu chữ khi Status là 'Chưa xử lý' -->
                                    <DataTrigger Binding="{Binding Status}" Value="Chưa xử lý">
                                        <DataTrigger.Setters>
                                            <Setter Property="Foreground" Value="Red"/>
                                        </DataTrigger.Setters>
                                    </DataTrigger>

                                    <!-- Triggers để thay đổi màu chữ khi Status là giá trị khác (đã xử lý) -->
                                    <DataTrigger Binding="{Binding Status}" Value="Đã xử lý">
                                        <DataTrigger.Setters>
                                            <Setter Property="Foreground" Value="Green"/>
                                        </DataTrigger.Setters>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.CellStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Chi tiết" Binding="{Binding ViolationDetails}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</UserControl>
