<UserControl x:Class="App_MotoEmissions.InspectionCenterWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:App_MotoEmissions"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="403*"/>
            <ColumnDefinition Width="397*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="300" />
        </Grid.RowDefinitions>

        <!-- DataGrid hiển thị danh sách InspectionCenter -->
        <DataGrid x:Name="dgInspectionCenters"
                  ItemsSource="{Binding InspectionCenters}" 
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  SelectionChanged="dgInspectionCenters_SelectionChanged"
                  Margin="10,30,10,10" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CenterId}" Width="50"/>
                <DataGridTextColumn Header="Tên Trung Tâm" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Địa Chỉ" Binding="{Binding Address}" Width="200"/>
                <DataGridTextColumn Header="Số Điện Thoại" Binding="{Binding PhoneNumber}" Width="150"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Form nhập thông tin -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10,10,10,10" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Tên Trung Tâm:" Width="100"/>
                <TextBox x:Name="txtName" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Địa Chỉ:" Width="100"/>
                <TextBox x:Name="txtAddress" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Số Điện Thoại:" Width="100"/>
                <TextBox x:Name="txtPhoneNumber" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Email:" Width="100"/>
                <TextBox x:Name="txtEmail" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <Button Content="Thêm" Click="btnAdd_Click" Width="80" Margin="5"/>
                <Button Content="Sửa" Click="btnUpdate_Click" Width="80" Margin="5"/>
                <Button Content="Xóa" Click="btnDelete_Click" Width="80" Margin="5"/>
                <Button Content="Reset" Click="btnReset_Click" Width="80" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
