<Window x:Class="App_MotoEmissions.PoliceCheckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_MotoEmissions"
        mc:Ignorable="d"
        Title="PoliceCheckWindow" Height="450" Width="800">
    <Grid Margin="10">
        <TextBlock Text="Nhập biển số xe:" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="txtLicensePlate" Height="30" Margin="0,30,0,0" />

        <Button Content="Tra cứu" Width="100" Height="30" Margin="0,70,0,0"
                />

        <ListView x:Name="lvInspectionResults" Margin="0,120,0,50">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Ngày kiểm định"  Width="150"/>
                    <GridViewColumn Header="Trung tâm kiểm định"  Width="150"/>
                    <GridViewColumn Header="Trạng thái" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="Ghi nhận vi phạm" Width="150" Height="30" 
                HorizontalAlignment="Right" Margin="0,370,0,0" />
    </Grid>
</Window>
