<Window x:Class="App_MotoEmissions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_MotoEmissions"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="400"
    WindowStartupLocation="CenterScreen">

    <Grid Background="AliceBlue">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Đăng nhập" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Email:" FontSize="14" FontWeight="Bold" Margin="5,0,0,5" />
                <TextBox Name="EmailTextBox" Width="300" Height="30" VerticalContentAlignment="Center"/>
                
            </StackPanel>

            <!-- Ô nhập Password -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Mật khẩu:" FontSize="14" FontWeight="Bold" Margin="5,0,0,5"/>
                <PasswordBox Name="PasswordBox" Width="300" Height="30" VerticalContentAlignment="Center"/>
            </StackPanel>

            <Button Content="Đăng nhập" Width="300" Height="30" Click="LoginButton_Click" Background="LightGreen"/>
            <Button Content="Đăng ký" Width="300" Height="30" Click="RegisterButton_Click" Margin="0,10,0,0"/>
            <Button Content="Thoát" Width="100" Height="30" Click="ExitButton_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
